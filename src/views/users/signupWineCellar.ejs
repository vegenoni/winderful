<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head.ejs") %>
        <title>REGISTRO BODEGAS | WINEDERFUL</title>
        <script
            type="text/javascript"
            src="/js/validations/validator.min.js"
        ></script>
        <script defer src="/js/validations/validationFunctions.js"></script>
        <script defer src="/js/validations/signupCellar.js"></script>
    </head>

    <body>
        <%- include("../partials/header.ejs") %>
        <main class="signup-main-cellar">
            <section class="form-register">
                <h2 class="padding">Crea una cuenta empresa</h2>
                <% if(typeof errors !== "undefined") { %>
                <ul>
                    <% for(let i = 0; i < errors.length; i++) { %>
                </ul>
                <li class="error"><%= errors[i].msg %></li>
                <% } %> <% } %>
                <form
                    id="signupCellar-form"
                    action="/usuarios/registroBodega"
                    class="form"
                    enctype="multipart/form-data"
                    method="POST"
                >
                    <label for="cellarName">Nombre de la bodega</label>
                    <input
                        type="text"
                        name="cellarName"
                        id="cellarName"
                        placeholder="Nombre de la bodega"
                    />
                    <label for="companyName">Razón social</label>
                    <input
                        type="text"
                        name="companyName"
                        id="companyName"
                        placeholder="Razón social"
                    />
                    <label for="cuit">CUIT</label>
                    <input
                        type="number"
                        name="cuit"
                        id="cuit"
                        placeholder="CUIT"
                    />
                    <label for="country">País</label>
                    <select name="countries" id="country">
                        <option value="" selected>Selecciona un pais</option>
                        
                    </select>

                    <label for="province">Provincia</label>
                    <input type="text" name="province" id="province">

                    <label for="email">E-mail</label>
                    <input
                        type="email"
                        name="email"
                        id="email"
                        placeholder="E-mail"
                    />
                    <label for="password">Contraseña</label>
                    <input
                        type="password"
                        name="password"
                        id="password"
                        placeholder="Contraseña"
                    />
                    <label for="avatar">Foto de perfil</label>
                    <input type="file" name="image" id="avatar" />
                    <label for="terms">
                        <input type="checkbox" name="terms" id="terms" />Acepto
                        los Terminos y Condiciones</label
                    >
                    <button class="button create">Crear cuenta</button>
                    <a class="marginTop" href="/usuarios/login"
                        >Ya tengo una cuenta</a
                    >
                    <a class="marginTop" href="/usuarios/registro"
                        >Crear una cuenta común</a
                    >
                </form>
            </section>
        </main>
        <%- include("../partials/footer.ejs") %>
    </body>
</html>
